<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ir.sajjadyosefi.android.xTubeless.activity.common.splashScreen.SplashScreen">


    <ImageView
        android:id="@+id/ivVisableBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/jpg_back2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"

        android:textColor="@android:color/white"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/textViewVersionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"/>

    <Button
        android:id="@+id/payMod1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewVersionName"
        android:layout_centerHorizontal="true"
        android:text="payMod1 دریافت وجه مستقیم"/>
    <Button
    android:id="@+id/payMod2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/payMod1"
    android:layout_centerHorizontal="true"
    android:text="payMod2 دریافت وجه دلخواه"/>

    <Button
        android:id="@+id/payMod3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payMod2"
        android:layout_centerHorizontal="true"
        android:text="payMod3 شارژ کیف پول"/>

    <Button
        android:id="@+id/payMod4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payMod3"
        android:layout_centerHorizontal="true"
        android:text="payMod4 شارژ دلخواه کیف پول"/>

    <Button
        android:id="@+id/payMod5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payMod4"
        android:layout_centerHorizontal="true"
        android:text="payMod5 دریافت وجه از کیف پول"/>





</RelativeLayout>
