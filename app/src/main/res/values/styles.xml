<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Theme-->
    <style name="AppDayTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tubelessColor_blue_01</item>
        <item name="colorPrimaryDark">@color/tubelessColor_blue_01</item>
        <item name="colorAccent">@color/tubelessColor_blue_01</item>

        <item name="buttonStyle">@style/AppTheme.DayButton</item>
        <item name="android:buttonStyle">@style/AppTheme.DayButton</item>

        <item name="android:editTextStyle">@style/AppTheme.DayEditText</item>
        <item name="editTextStyle">@style/AppTheme.DayEditText</item>
    </style>

    <style name="AppNightTheme" parent="Theme.AppCompat.DayNight" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tubelessColor_blue_01</item>
        <item name="colorPrimaryDark">@color/tubelessColor_blue_01</item>
        <item name="colorAccent">@color/tubelessColor_blue_01</item>

        <item name="buttonStyle">@style/AppTheme.NightButton</item>
        <item name="android:buttonStyle">@style/AppTheme.NightButton</item>

        <item name="android:editTextStyle">@style/AppTheme.NightEditText</item>
        <item name="editTextStyle">@style/AppTheme.NightEditText</item>


    </style>


    <style name="TubelessDayTheme" parent="AppDayTheme">
        <item name="android:textViewStyle">@style/AppTheme.DayTextView</item>
    </style>



    <style name="AppTheme.AllActivities"  parent="AppDayTheme">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>


    <style name="AppTheme.MainActivityTheme"  parent="AppTheme.AllActivities">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="toolbar_text">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:shadowColor">@color/colorBlack</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>



