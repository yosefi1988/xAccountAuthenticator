        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TranslucentSajjad" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/tubelessColor_blue_03</item>
        <item name="colorPrimaryDark">@color/tubelessColor_blue_01</item>
        <item name="colorAccent">@color/tubelessColor_blue_02</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--<item name="android:windowTranslucentStatus">true</item>-->
