<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Button-->
    <style name="Style.Button.SB24" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/button_textColor</item>
        <item name="android:background">@drawable/widget_button</item>
<!--        <item name="android:textSize">18dp</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Style.Button.AAASDK" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/day_white_text</item>
        <item name="android:background">@drawable/btn_search</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAllCaps">false</item>

        <item name="fontFamily">@font/iransans</item>
        <item name="android:fontFamily">@font/iransans</item>
    </style>
    <!--End Button-->



    <!--TextView-->
    <style name="AppTheme.DayTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tubelessColor_blue_02</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/iransans</item>
        <item name="android:fontFamily">@font/iransans</item>

    </style>

    <style name="AppTheme.DayTextViewBigTitle" parent="AppTheme.DayTextView">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <!--EditText-->
    <style name="AppTheme.DayEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_search</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">start</item>
        <item name="android:textDirection">locale</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textColorHint">@color/day_white_hint_text</item>
        <item name="android:textSize">16dp</item>

        <item name="fontFamily">@font/iransans</item>
        <item name="android:fontFamily">@font/iransans</item>
    </style>


</resources>
